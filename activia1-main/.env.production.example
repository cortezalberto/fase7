# ==============================================
# VARIABLES DE ENTORNO PARA EASYPANEL
# Copia estas variables en la configuraci√≥n de cada servicio
# ==============================================

# ============= BACKEND (API) =============
# Database (usa los valores internos de EasyPanel)
DATABASE_URL=postgresql://usuario:password@activia-postgres:5432/activia
POSTGRES_USER=activia_user
POSTGRES_PASSWORD=CAMBIAR_ESTO_POR_PASSWORD_SEGURO
POSTGRES_DB=activia

# Redis (usa el nombre del servicio en EasyPanel)
REDIS_URL=redis://:password@activia-redis:6379/0
REDIS_PASSWORD=CAMBIAR_ESTO_POR_PASSWORD_SEGURO

# Security (GENERA CLAVES SEGURAS)
SECRET_KEY=GENERAR_CON_openssl_rand_hex_32
JWT_SECRET_KEY=GENERAR_CON_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Provider (usa 'mock' para testing sin Ollama)
LLM_PROVIDER=mock
# Si usas Ollama en servidor externo:
# LLM_PROVIDER=ollama
# OLLAMA_BASE_URL=http://tu-servidor-ollama:11434
# OLLAMA_MODEL=phi3

# CORS (agrega el dominio de tu frontend en EasyPanel)
ALLOWED_ORIGINS=https://tu-dominio.easypanel.host,http://localhost:5173

# App Config
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=False

# ============= FRONTEND =============
# API URL (ajusta con la URL de tu backend en EasyPanel)
VITE_API_URL=https://api-tu-dominio.easypanel.host
VITE_API_BASE_URL=https://api-tu-dominio.easypanel.host/api/v1

# ============= PostgreSQL Service =============
POSTGRES_USER=activia_user
POSTGRES_PASSWORD=CAMBIAR_ESTO_POR_PASSWORD_SEGURO
POSTGRES_DB=activia

# ============= Redis Service =============
# Si configuras password en Redis
REDIS_PASSWORD=CAMBIAR_ESTO_POR_PASSWORD_SEGURO
